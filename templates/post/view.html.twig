{% extends 'base.html.twig' %}

{% block body %}
    <h3>{{ post.title }}</h3>
    <p>{{ post.datePublic|date("Y-m-d H:i:s") }}</p>
    <p>{{ post.text|nl2br }}</p><br>
    <a href="{{ path("rewrite_post",{id:post.id}) }}" class="btn btn-primary">Редактировать</a>
    <a href="{{ path("post") }}" class="btn btn-primary">Вернуться на главную</a>


{% endblock %}



